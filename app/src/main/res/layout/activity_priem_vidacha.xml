<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriemVidachaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_priem_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/linerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="28dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/text_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_margin="5dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="TextView" />


    </LinearLayout>
    <EditText
        android:id="@+id/edit_text_total"
        android:layout_below="@id/linerLayout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:gravity="center"
        android:inputType="number"/>





    <Button
        android:id="@+id/btn_add_new_total"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"

/>

    <Button
        android:id="@+id/btn_help"

        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="@drawable/btn_help"
        android:shadowColor="#A8A8A8"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_add_new_total"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="400dp"
        android:shadowRadius="5"
        android:text="@string/help"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        />

</RelativeLayout>